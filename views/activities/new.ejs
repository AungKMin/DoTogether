<%- include('../partials/header') %> 

<div class="container"> 
	<div clas="row">
		<h1 class="title"> Post a new activitiy </h1>
		<div class="form-box">
			<form action="/activities" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Activity Description">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="date" placeholder="When do you want to do the activity?">
				</div>
				<div class="form-group">
					<p> Type of activity </p>				
					<select name="category" multiple>
						<% categories.forEach(function(category) { %>
							<option value="<%=category%>"><%=category%></option>
						<% }) %>	
					</select>
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="image" placeholder="Image URL">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="description" placeholder="description of activity">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block" value="Post">  
				</div>
			</form>
			<a href="/activities" >View Activities</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>

