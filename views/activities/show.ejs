<%- include('../partials/header') %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">DoTogether</p>
			<div class="list-group">
				<li class="list-group-item active">Info</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img src="<%= activity.image %>" onerror="this.src='https://images.unsplash.com/photo-1593007791459-4b05e1158229?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80'" alt='An awesome activity'>
				<div class="caption">
					<h4 class="pull-right">July 30, 2020</h4>
					<h2><a><%= activity.name %></a></h2> 
					<p><%= activity.description %></p>
					<p>
						<em> Subbmitted by: <%= activity.author.username %>, <%=moment(activity.dateCreated).fromNow()%> </em>
					</p>
					<% if (currentUser && activity.author.id.equals(currentUser._id)) { %>
							<a class="btn btn-s btn-warning" href="/activities/<%=activity._id%>/edit">Edit Post</a>
							<form class="delete-form" action='/activities/<%= activity._id %>?_method=DELETE' method='POST'> 
							<input class="btn btn-s btn-danger" type="submit" value="Delete">
						</form>
					<% } %>
				</div>
			</div>	
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/activities/<%=activity._id%>/comments/new">Tell the poster you're interested!</a>  
				</div>
				<hr>
				<% activity.comments.forEach(function (comment) { %>
					<div class="row">
						<div class="col-md-12">
							<strong> <%= comment.author.username %> </strong>
							<span class="pull-right"><%= moment(comment.dateCreated).fromNow() %></span>	
							<p> 
								<%= comment.text %> 
							</p>
							<% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
								<a class="btn btn-xs btn-warning" 
									href="/activities/<%=activity._id%>/comments/<%=comment._id%>/edit">Edit Comment</a>
								<form class="delete-form" action="/activities/<%=activity._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
									<button class="btn btn-xs btn-danger">Delete</button>
								</form>
							<% } %>
						</div>
					</div>
				<% } ) %>
			</div> 
		</div>
	</div>
</div>

<%- include('../partials/footer') %>
