<%- include('../partials/header') %> 

<div class="container"> 
	<div clas="row">
		<h1 class="title"> Tell the poster you're interested! - <%= activity.name %> </h1>
		<div class="form-box">
			<form action="/activities/<%= activity._id %>/comments" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" placeholder="tell the poster you're interested!">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block" value="Post">  
				</div>
			</form>
			<a href="/activities" >View Activities</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>

