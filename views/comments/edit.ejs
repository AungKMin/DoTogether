<%- include('../partials/header') %> 

<div class="container"> 
	<div clas="row">
		<h1 class="title"> Edit your comment </h1>
		<div class="form-box">
			<form action="/activities/<%= activity_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" value="<%=comment.text%>">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block" value="Post">  
				</div>
			</form>
			<a href="/activities" >View Activities</a>
		</div>
	</div>
</div>

<%- include('../partials/footer') %>

