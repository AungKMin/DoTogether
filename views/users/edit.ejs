<%- include('../partials/header') %>

<div class="row">
	<h1 class="title">Edit Profile</h1>
	<div class="form-box">
		<form action="/users/<%=user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="form-group">
				<label target="firstName">First Name</label>
				<input class="form-control" type="text" name="firstName" placeholder="First Name" value="<%=user.firstName%>" required>
			</div>
			<div class="form-group">
				<label target="lastName">Last Name</label>
				<input class="form-control" type="text" name="lastName" placeholder="Last Name" value="<%=user.lastName%>" required>
			</div>
			<div class="form-group">
				<label for="image">Image</label>
				<input type="file" id="image" class="form-control" name="image" accept="image/*">
			</div>
			<div class="form-group">
				<label target="bio">Your Bio</label>
				<input class="form-control" type="text" name="bio" placeholder="Bio" value="<%=user.bio%>">
			</div>
			<div class="form-group">
				<label target="gender">Gender</label>
				<select name="gender" style="display: block">
					<option value="na" <%if (user.gender === 'na') { %> selected <%}%>>prefer not to say</option>
					<option value="male" <%if (user.gender === 'male') { %> selected <%}%>>male</option>
					<option value="female" <%if (user.gender === 'female') { %> selected <%}%>>female</option>
					<option value="other" <%if (user.gender === 'other') { %> selected <%}%>>other</option>
				</select>
			</div>
			<div class="form-group">
				<label target="contact">Contact</label>
				<input class="form-control" type="text" name="contact" placeholder="a way for others to contact you (everyone can see this on your profile)" value="<%=user.contact%>">
			</div>
			<div class="form-group">
				<label target="email">Email</label>
				<input class="form-control" type="text" name="email" placeholder="email" value="<%=user.email%>" required>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Finish</button>
			</div> 
		</form>
		<a href="/activities">Go Back</a> 
	</div>
</div> 

<%- include('../partials/footer') %>

