<%- include('../partials/header') %>

<h1>User profile</h1>

<div class="row">
	<div class="col-md-4">
		<div class="thumbnail">
			<h1><%= user.firstName + ' ' + user.lastName%> aka <%= user.username %></h1>
			<img src="<%=user.avatar%>" onerror="this.src='https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460__340.png'" alt="user profile picture">
			<div class="caption"><a href="mailto:<%=user.email%>"><%= user.email%></a></div>
		</div>
		<p><%=user.bio%></p>
	</div>
	<div class="col-md-8"> </div>
			
	</div> 
</div>

<%- include('../partials/footer') %>
